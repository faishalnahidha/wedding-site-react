{
  "env": {
    "browser": true,
    "es2021": true,
    "meteor": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "prettier/react",
    "plugin:meteor/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "plugins": ["react", "prettier", "meteor", "react-hooks"],
  "settings": {
    "import/resolver": "meteor"
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "no-unused-vars": [
      "error",
      {
        "ignore": ["meteor"]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "indent": ["error", 2],
    "quotes": [
      "error",
      "single",
      // To allow Template Literals inside Component props.
      // ex. <Component width={`50%`}/>
      //
      { "allowTemplateLiterals": true }
    ],
    "import/no-absolute-path": ["off"], // To allow absolute path imports in Meteor
    "no-underscore-dangle": ["off"], // To allow `_id` access when retrieving Mongo documents
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  }
}
